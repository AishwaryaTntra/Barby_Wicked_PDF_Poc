<table class = 'post_index_table'>
  <thead>
    <th>
      Title
    </th>
    <th>
      Body
    </th>
    <th>
      Author
    </th>
    <th>
      Genre
    </th>
    <th>
      View
    </th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
     <tr>
       <td> <%= post.title %> </td>
       <td> <%= post.body %> </td>
       <td> <%= post.author.name %> </td>
       <td> <%= post.genre.name %> </td>
       <td><%= link_to 'View', post_path(post) %></td>
     </tr>
     <% end %>
  </tbody>
</table>
